<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="editTextStyle">@style/AppEditText</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme">
        <item name="android:layout_height">58dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Button.Secondary" parent="AppTheme">
        <item name="colorPrimary">@color/secondaryColor</item>
    </style>

    <style name="Button.Primary" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.Caption.Italic" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_italic</item>
    </style>

    <style name="AppTheme.CheckBox" parent="AppTheme">
        <item name="android:buttonTint">@color/primaryColor</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="AppTheme">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="AppTheme.MaterialCardView.TopLeftRightCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeCardViewTopLeftRightCorners</item>
    </style>

    <style name="ShapeCardViewTopLeftRightCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>

    <style name="AppEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
    </style>

    <style name="Theme.AppBottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

</resources>