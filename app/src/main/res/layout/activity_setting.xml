<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_sort_option_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDividerLight"
        android:padding="10dp"
        android:text="@string/sort_option_title"
        android:textAppearance="@style/TextAppearance.Header"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_sort_option_title">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_button_no_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/no_sort"
            android:textAppearance="@style/TextAppearance.Body1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_button_sort_by_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sort_by_newest"
            android:textAppearance="@style/TextAppearance.Body1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_button_sort_by_oldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sort_by_oldest"
            android:textAppearance="@style/TextAppearance.Body1" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_password_recovery_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorDividerLight"
        android:drawableEnd="@drawable/ic_backup_off"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="10dp"
        android:text="@string/password_recovery_title"
        android:textAppearance="@style/TextAppearance.Header"
        app:layout_constraintTop_toBottomOf="@id/radio_button_group" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_password_recovery_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:text="@string/password_recovery_desc_no_generate"
        android:textAppearance="@style/TextAppearance.Caption.Italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_password_recovery_title" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:text="@string/password_recovery_generated"
        android:textAppearance="@style/TextAppearance.Caption"
        android:textColor="@color/colorTextRed"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>