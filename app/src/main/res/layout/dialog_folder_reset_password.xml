<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_rounded_8"
    android:clipToPadding="false"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/activity_vertical_margin">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_password_recovery_hash"
        style="@style/AppTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error_red"
        app:hintEnabled="true"
        app:layout_constraintEnd_toStartOf="@id/image_view_paste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderText="@string/text_input_recovery_password_hint"
        app:placeholderTextAppearance="@style/TextAppearance.Caption"
        app:placeholderTextColor="@color/colorTextHint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_password_recovery_hash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_input_recovery_password_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColorHint="#757575"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_paste"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/ic_paste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_layout_password_recovery_hash" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_new_password"
        style="@style/AppTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error_red"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/text_layout_password_recovery_hash"
        app:placeholderText="@string/text_input_folder_password_hint_desc"
        app:placeholderTextAppearance="@style/TextAppearance.Caption"
        app:placeholderTextColor="@color/colorTextHint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_input_folder_new_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColorHint="#757575"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout_new_password_confirm"
        style="@style/AppTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error_red"
        app:hintEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/text_layout_new_password"
        app:placeholderText="@string/text_input_folder_password_hint_confirm"
        app:placeholderTextAppearance="@style/TextAppearance.Caption"
        app:placeholderTextColor="@color/colorTextHint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_new_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_input_folder_password_hint_confirm_desc"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Body"
            android:textColorHint="#757575"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_done"
        style="@style/AppTheme.Button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:text="@string/button_done"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:theme="@style/Button.Primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_layout_new_password_confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>