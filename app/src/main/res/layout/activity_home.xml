<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        tools:ignore="VisualLintBottomNav" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/button_action"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_desc_button_action"
        app:fabSize="normal"
        app:icon="@drawable/ic_archive"
        app:layout_constraintBottom_toBottomOf="@id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_navigation_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_archive_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="@string/archive_a_link"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_action"
        app:layout_constraintEnd_toEndOf="@+id/button_action"
        app:layout_constraintStart_toStartOf="@id/button_action" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_archive_url"
        style="@style/Widget.Material3.FloatingActionButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/content_desc_button_archive_url"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/text_archive_url"
        app:layout_constraintEnd_toEndOf="@+id/text_archive_url"
        app:layout_constraintStart_toStartOf="@id/text_archive_url" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_archive_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="@string/share_some_images"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_archive_url"
        app:layout_constraintEnd_toEndOf="@+id/button_archive_url"
        app:layout_constraintStart_toStartOf="@id/button_archive_url" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_archive_images"
        style="@style/Widget.Material3.FloatingActionButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/content_desc_button_archive_images"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/text_archive_images"
        app:layout_constraintEnd_toEndOf="@+id/text_archive_images"
        app:layout_constraintStart_toStartOf="@id/text_archive_images" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_archive_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:text="@string/archive_a_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_archive_images"
        app:layout_constraintEnd_toEndOf="@+id/button_archive_images"
        app:layout_constraintStart_toStartOf="@id/button_archive_images" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_archive_text"
        style="@style/Widget.Material3.FloatingActionButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/content_desc_button_archive_text"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/text_archive_text"
        app:layout_constraintEnd_toEndOf="@+id/text_archive_text"
        app:layout_constraintStart_toStartOf="@id/text_archive_text" />

    <View
        android:id="@+id/view_fab_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:elevation="4dp"
        android:contentDescription="@string/overlay"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>